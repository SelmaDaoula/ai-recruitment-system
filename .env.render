# Render Deployment Environment
ENVIRONMENT=production
DEBUG=false
PYTHONUNBUFFERED=1
PYTHONIOENCODING=utf-8

# Database Configuration
POSTGRES_URL=postgresql://user:password@db:5432/recruitment_db
MONGODB_URL=mongodb://mongo:27017/recruitment_db

# API Configuration
API_PORT=8000
CORS_ORIGINS=*
API_BASE_URL=https://recruitment-backend.onrender.com

# Frontend Configuration
FRONTEND_URL=https://recruitment-frontend.onrender.com

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://recruitment-frontend.onrender.com/linkedin/callback

# JWT Configuration
JWT_SECRET=your_very_secret_key_change_this_in_production
JWT_ALGORITHM=HS256

# Upload Settings
UPLOAD_FOLDER=/tmp/uploads
MAX_UPLOAD_SIZE=10485760
